# don't display the copyright page
startup_message off

# increase scrollback buffer size
defscrollback 10000

# title of the session 
sessionname tracker-scripts

screen -t A-recording-scheduler      sh -c '. tracker-profile.sh; ./bin/crs_run script-A-recording-scheduler.pl'
screen -t B-mount4cut                sh -c '. tracker-profile.sh; ./bin/crs_run script-B-TS-mount4cut.pl'
screen -t C-cut-postprocessor        sh -c '. tracker-profile.sh; ./bin/crs_run script-C-TS-cut-postprocessor.pl'
screen -t D-encoding-postprocessor   sh -c '. tracker-profile.sh; ./bin/crs_run script-D-encoding-postprocessor.pl'
#usually no script-E-release
screen -t F-encoding                 sh -c '. tracker-profile.sh; ./bin/crs_run script-F-encoding.sh'
screen -t G-tagging                  sh -c '. tracker-profile.sh; ./bin/crs_run script-G-tagging.sh'

screen -t X-help                     sh -c 'echo "this screen has multiple tabs opened, which each run one of the scripts for the various stages of a tracker-ticket. Use <Ctrl+A> <Number> to switch to one of these tabs. The tabs run the following scripts:\n Tab 0: A-recording-scheduler\n Tab 1: B-mount4cut\n Tab 2: C-cut-postprocessor\n Tab 3: D-encoding-postprocessor\n Tab 4: F-encoding\n Tab 5: G-tagging\n Tab 6: this help"; PS1="> " sh'
