# don't display the copyright page
startup_message off

# increase scrollback buffer size
defscrollback 10000

# title of the session 
sessionname tracker-scripts

hardstatus alwayslastline
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}'

screen -t A-recording-scheduler      bash -c '. tracker-profile.sh; ./bin/crs_run script-A-recording-scheduler.pl'
screen -t B-mount4cut                bash -c '. tracker-profile.sh; ./bin/crs_run script-B-TS-mount4cut.pl'
screen -t C-cut-postprocessor        bash -c '. tracker-profile.sh; ./bin/crs_run script-C-TS-cut-postprocessor.pl'
#usually unnecessary:
#screen -t D-encoding-postprocessor   bash -c '. tracker-profile.sh; ./bin/crs_run script-D-encoding-postprocessor.pl'
#usually no script-E-release
screen -t F-encoding                 bash -c '. tracker-profile.sh; ./bin/crs_run script-F-encoding.sh'
screen -t G-tagging                  bash -c '. tracker-profile.sh; ./bin/crs_run script-G-tagging.sh'

screen -t X-help                     bash -c 'echo -e "\nThis screen has multiple tabs opened, which each run one of the scripts for the various stages of a tracker-ticket. Use <Ctrl+a> <number> to switch to one of these tabs. The tabs run the following scripts:\n Tab 0: A-recording-scheduler\n Tab 1: B-mount4cut\n Tab 2: C-cut-postprocessor\n Tab 3: D-encoding-postprocessor\n Tab 4: F-encoding\n Tab 5: G-tagging\n Tab 6: this help\n\nQuit everything with <Ctrl+a> :quit <Return>\n"; cat '

