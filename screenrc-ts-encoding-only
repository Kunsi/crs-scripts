# don't display the copyright page
startup_message off

# increase scrollback buffer size
defscrollback 10000

# title of the session 
sessionname tracker-scripts

hardstatus alwayslastline
hardstatus string '%{= kG}%-Lw%{= kW}%50> %n%f* %t%{= kG}%+Lw%< %{= kG}'

screen -t D-encoding                 bash -c '. tracker-profile.sh; ./bin/crs_run script-D-encoding.sh'

screen -t X-help                     bash -c 'echo -e "\nThis screen has multiple tabs opened, which each run one of the scripts for the various stages of a tracker-ticket. Use <Ctrl+a> <number> to switch to one of these tabs. The tabs run the following scripts:\n Tab 0: D-encoding\n Tab 1: this help\n\nQuit everything with <Ctrl+a> :quit <Return>\n"; cat '

